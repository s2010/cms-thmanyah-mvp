{
  "name": "@thmanyah/cms-platform",
  "version": "1.0.0",
  "description": "Thmanyah CMS Platform - Unified monorepo for admin and discovery services",
  "private": true,
  "workspaces": {
    "packages": [
      "cms",
      "discovery"
    ]
  },
  "scripts": {
    "preinstall": "npm cache clean --force || true",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "clean": "npm run clean:cms && npm run clean:discovery && rimraf dist node_modules/.cache",
    "clean:cms": "cd cms && rimraf dist node_modules/.cache coverage",
    "clean:discovery": "cd discovery && rimraf dist node_modules/.cache coverage",
    "build": "npm run build:cms && npm run build:discovery",
    "build:cms": "cd cms && npm run build",
    "build:discovery": "cd discovery && npm run build",
    "start": "npm run start:all",
    "start:all": "concurrently \"npm run start:cms\" \"npm run start:discovery\"",
    "start:cms": "cd cms && npm run start:dev",
    "start:discovery": "cd discovery && npm run start:dev",
    "start:prod": "concurrently \"npm run start:cms:prod\" \"npm run start:discovery:prod\"",
    "start:cms:prod": "cd cms && npm run start:prod",
    "start:discovery:prod": "cd discovery && npm run start:prod",
    "dev": "npm run start:all",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
    "lint": "npm run lint:cms && npm run lint:discovery",
    "lint:cms": "cd cms && npm run lint",
    "lint:discovery": "cd discovery && npm run lint",
    "test": "npm run test:cms && npm run test:discovery",
    "test:cms": "cd cms && npm run test",
    "test:discovery": "cd discovery && npm run test",
    "test:e2e": "npm run test:e2e:cms && npm run test:e2e:discovery",
    "test:e2e:cms": "cd cms && npm run test:e2e",
    "test:e2e:discovery": "cd discovery && npm run test:e2e",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:up:logs": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --rmi local && docker system prune -f",
    "db:init": "docker-compose exec postgres psql -U postgres -d thmanyah_cms -f /docker-entrypoint-initdb.d/init-db.sql",
    "db:backup": "docker-compose exec postgres pg_dump -U postgres thmanyah_cms > backup-$(date +%Y%m%d-%H%M%S).sql",
    "logs:cms": "docker-compose logs -f cms",
    "logs:discovery": "docker-compose logs -f discovery",
    "health:check": "curl -f http://localhost:3000/health && curl -f http://localhost:3001/api/v1/health/live"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "keywords": [
    "thmanyah",
    "cms",
    "microservices",
    "nestjs",
    "monorepo",
    "podcasting",
    "content-management"
  ],
  "author": "Thmanyah Engineering Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thmanyah/cms-platform.git"
  }
} 