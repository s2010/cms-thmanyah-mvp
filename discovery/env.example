# Discovery Service Configuration
NODE_ENV=development
PORT=3000
SERVICE_NAME=thmanyah-discovery

# Read-only database connection (replica)
DISCOVERY_DB_HOST=localhost
DISCOVERY_DB_PORT=5432
DISCOVERY_DB_USERNAME=postgres
DISCOVERY_DB_PASSWORD=password
DISCOVERY_DB_NAME=thmanyah_cms
DISCOVERY_DB_URL=postgresql://postgres:password@localhost:5432/thmanyah_cms

# Redis configuration for pub/sub and caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache settings
CACHE_TTL_SECONDS=60
SEARCH_CACHE_TTL_SECONDS=30

# API Configuration
API_PREFIX=api/v1
MAX_PAGE_SIZE=50
DEFAULT_PAGE_SIZE=20
MAX_SEARCH_PAGE_SIZE=30

# Logging
LOG_LEVEL=info

# Health check
HEALTH_CHECK_TIMEOUT=5000 