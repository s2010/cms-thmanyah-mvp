# Thmanyah CMS Platform - Development Environment Template
# Copy this to env.dev and update values for your development environment

# PostgreSQL Database
POSTGRES_DB=thmanyah_cms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Database connection for services  
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=thmanyah_cms
DATABASE_URL=postgres://postgres:password@postgres:5432/thmanyah_cms

# Discovery service database
DISCOVERY_DB_HOST=postgres
DISCOVERY_DB_PORT=5432
DISCOVERY_DB_USERNAME=postgres
DISCOVERY_DB_PASSWORD=password
DISCOVERY_DB_NAME=thmanyah_cms
DISCOVERY_DB_URL=postgres://postgres:password@postgres:5432/thmanyah_cms

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application settings
NODE_ENV=development
JWT_SECRET=thmanyah-secret-key-change-in-production
CACHE_TTL=300
CACHE_MAX=100

# Cache settings
DISCOVERY_CACHE_TTL=60
SEARCH_CACHE_TTL_SECONDS=30

# API Configuration
API_RATE_LIMIT=1000
API_PREFIX=api/v1
MAX_PAGE_SIZE=50
DEFAULT_PAGE_SIZE=20

# YouTube API (optional in development)
YOUTUBE_API_KEY=

# pgAdmin (development only)
PGADMIN_DEFAULT_EMAIL=admin@thmanyah.com
PGADMIN_DEFAULT_PASSWORD=admin123 